{
	"train": "PointNetPwiseClassifier",
	"in_pcloud": "https://3dweb.geog.uni-heidelberg.de/trees_leafwood/PinSyl_KA09_T048_2019-08-20_q1_TLS-on_c_t.laz",
	"out_model": "out/PointnetPwiseClassifier_FPSone_cylinder/pnet_pwise_classif.model",
	"fnames": ["AUTO"],
	"training_type": "base",
	"random_seed": null,
	"model_args": {
		"num_classes": 2,
		"class_names": ["wood", "leaf"],
		"num_pwise_feats": 128,
		"pre_processing": {
			"pre_processor": "furthest_point_subsampling",
			"num_points": 64000,
			"num_encoding_neighbors": 3,
			"fast": true,
			"neighborhood": {	
				"type": "cylinder",
				"radius": 2.5,
				"separation_factor": 0.8
			},
			"nthreads": 6,
			"receptive_fields_dir": "out/PointnetPwiseClassifier_FPSone_cylinder/eval/receptive_fields/"
		},
		"pretransf_feats_spec": [
			{
				"filters": 64,
				"name": "feats_64A"
			},
			{
				"filters": 64,
				"name": "feats_64B"
			},
			{
				"filters": 128,
				"name": "feats_128"
			}	
		],
		"postransf_feats_spec": [
			{
				"filters": 256,
				"name": "feats_256"
			},
			{
				"filters": 1024,
				"name": "feats_1024"
			}
		],
		"tnet_pre_filters_spec": [64, 128, 512],
		"tnet_post_filters_spec": [256, 128],
		"model_handling": {
			"summary_report_path": "out/PointnetPwiseClassifier_FPSone_cylinder/model_summary.log",
			"training_history_dir": "out/PointnetPwiseClassifier_FPSone_cylinder/eval/history",
			"class_weight": "auto",
			"training_epochs": 200,
			"batch_size": 4,
			"checkpoint_path": "out/PointnetPwiseClassifier_FPSone_cylinder/checkpoint.model",
			"checkpoint_monitor": "loss",
			"learning_rate_on_plateau": {
				"monitor": "loss",
				"mode": "min",
				"factor": 0.1,
				"patience": 10,
				"cooldown": 5,
				"min_delta": 0.01,
				"min_lr": 1e-6
			},
			"early_stopping": {
				"monitor": "loss",
				"mode": "min",
				"min_delta": 0.01,
				"patience": 20
			}

		},
		"compilation_args": {
			"optimizer": {
				"algorithm": "SGD",
				"learning_rate": 1e-2
			},
			"loss": {
				"function": "class_weighted_binary_crossentropy"
			},
			"metrics": [
				"binary_accuracy",
				"precision",
				"recall"
			]
		},
		"architecture_graph_path": "out/PointnetPwiseClassifier_FPSone_cylinder/model_graph.png",
		"architecture_graph_args": {
			"show_shapes": true,
			"show_dtype": true,
			"show_layer_names": true,
			"rankdir": "TB",
			"expand_nested": true,
			"dpi": 300,
			"show_layer_activations": true
        }
	},
	"autoval_metrics": ["OA", "P", "R", "F1", "IoU", "wP", "wR", "wF1", "wIoU", "MCC", "Kappa"],
	"training_evaluation_metrics": ["OA", "P", "R", "F1", "IoU", "wP", "wR", "wF1", "wIoU", "MCC", "Kappa"],
  	"training_class_evaluation_metrics": ["P", "R", "F1", "IoU"],
	"training_evaluation_report_path": "out/PointnetPwiseClassifier_FPSone_cylinder/eval/evaluation.log",
	"training_class_evaluation_report_path": "out/PointnetPwiseClassifier_FPSone_cylinder/eval/class_evaluation.log",
	"training_confusion_matrix_report_path": "out/PointnetPwiseClassifier_FPSone_cylinder/eval/confusion.log",
	"training_confusion_matrix_plot_path": "out/PointnetPwiseClassifier_FPSone_cylinder/eval/confusion.svg",
	"training_class_distribution_report_path": "out/PointnetPwiseClassifier_FPSone_cylinder/eval/class_distribution.log",
	"training_class_distribution_plot_path": "out/PointnetPwiseClassifier_FPSone_cylinder/eval/class_distribution.svg",
	"training_classified_point_cloud_path": "out/PointnetPwiseClassifier_FPSone_cylinder/eval/classified_point_cloud.laz",
	"training_activations_path": "out/PointnetPwiseClassifier_FPSone_cylinder/eval/activations.laz"
}