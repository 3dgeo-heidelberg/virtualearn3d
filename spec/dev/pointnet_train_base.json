{
	"train": "PointNetPwiseClassifier",
	"in_pcloud": "https://3dweb.geog.uni-heidelberg.de/trees_leafwood/PinSyl_KA09_T048_2019-08-20_q1_TLS-on_c_t.laz",
	"out_model": "out/PointnetPwiseClassifier/pnet_pwise_classif.model",
	"fnames": ["AUTO"],
	"training_type": "base",
	"random_seed": null,
	"model_args": {
		"num_classes": 2,
		"class_names": ["wood", "leaf"],
		"num_pwise_feats": 128,
		"pre_processing": {
			"sphere_radius": 1.0,
			"separation_factor": 1.0,
			"cell_size": [0.07, 0.07, 0.07],
			"nthreads": 6
		},
		"pretransf_feats_spec": [
			{
				"filters": 64,
				"name": "feats_64A"
			},
			{
				"filters": 64,
				"name": "feats_64B"
			},
			{
				"filters": 128,
				"name": "feats_128"
			}	
		],
		"postransf_feats_spec": [
			{
				"filters": 256,
				"name": "feats_256"
			},
			{
				"filters": 1024,
				"name": "feats_1024"
			}
		],
		"tnet_pre_filters_spec": [64, 128, 512],
		"tnet_post_filters_spec": [256, 128],
		"model_handling": {
			"summary_report_path": "out/PointnetPwiseClassifier/model_summary.log",
			"training_epochs": 10,
			"batch_size": 8,
			"checkpoint_path": "out/PointnetPwiseClassifier/checkpoint.model",
			"checkpoint_monitor": "loss",
			"learning_rate_on_plateau": {
				"monitor": "loss",
				"mode": "min",
				"factor": 0.1,
				"patience": 10,
				"cooldown": 5,
				"min_delta": 0.01,
				"min_lr": 1e-6
			},
			"early_stopping": {
				"monitor": "loss",
				"mode": "min",
				"min_delta": 0.01,
				"patience": 20
			}

		},
		"compilation_args": {
			"optimizer": {
				"algorithm": "SGD",
				"learning_rate": 1e-3
			},
			"loss": {
				"function": "sparse_categorical_crossentropy"
			},
			"metrics": [
				"sparse_categorical_accuracy"
			]
		}	
	},
	"autoval_metrics": ["OA", "P", "R", "F1", "IoU", "wP", "wR", "wF1", "wIoU", "MCC", "Kappa"],
	"training_evaluation_metrics": ["OA", "P", "R", "F1", "IoU", "wP", "wR", "wF1", "wIoU", "MCC", "Kappa"],
  	"training_class_evaluation_metrics": ["P", "R", "F1", "IoU"],
	"training_evaluation_report_path": "out/PointnetPwiseClassifier/eval/evaluation.log",
	"training_class_evaluation_report_path": "out/PointnetPwiseClassifier/eval/class_evaluation.log",
	"training_confusion_matrix_report_path": "out/PointnetPwiseClassifier/eval/confusion.log",
	"training_confusion_matrix_plot_path": "out/PointnetPwiseClassifier/eval/confusion.svg",
	"training_class_distribution_report_path": "out/PointnetPwiseClassifier/eval/class_distribution.log",
	"training_class_distribution_plot_path": "out/PointnetPwiseClassifier/eval/class_distribution.svg"
}